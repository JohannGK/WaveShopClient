@page
@model ShoppingsModel
@{
    ViewData["Title"] = "Shoppings";
}

<style>
    .card:hover {
        box-shadow: 10px 10px 5px lightgreen;
        transition-duration: .3s;
    }

    .card {
        transition-duration: .3s;
        padding: 1em;
        font-size: small;
    }

    img {
        width: 7em;
    }
</style>

<div class="container">
    @{
        if (Model.ViewToShow == "Request")
        {
            var products = Model.ProductsSelected;
            foreach (var product in products)
            {
                <div class="card m-3 rounded">
                    <div class="row g-0">
                        <div class="col-md-2">
                            <img src="https://cdn0.iconfinder.com/data/icons/creative-business-and-development/512/package_products_food_branding_merchandise_packaging_marketing_design_box_bottles_commercial_identity_flat_design_icon-512.png"
                        class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body m-0 p-0">
                                <h5 class="card-title mb-0">@product.Name</h5>
                                <small style="color: green;">Cantidad: @product.StockQuantity</small>
                                <p id="productDescription" class="card-text" style="text-align: justify;">@product.Description</p>
                                <p class="card-text"><small class="text-muted">Status de compra: @product.Status</small></p>
                            </div>
                        </div>
                        <div class="col-md-2" style="text-align: right;">
                            <label class="text-center fs-3">$ @product.UnitPrice</label>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="container">
                <div class="card mt-5">
                    <img class="img-fluid w-100"
                    src="https://cdn.dribbble.com/users/1507834/screenshots/4293651/g_business_logo.gif"
                    class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text"></p>
                        <form method="get">
                            <a asp-page="/Shoppings" class="btn btn-primary">Ver carrito</a>
                        </form>

                    </div>
                </div>
            </div>
        }

    }
</div>


@section Scripts {
<script>
    $(document).ready(() => {
        $('#productDescription').text(function () {
            var content = $(this).text();
            if (content.length > 280)
                return content.substring(0, 280) + '...';
            else
                return $(this).text();
        });
    });
</script>
}
