@page
@model ProductModel
@{
    ViewData["Title"] = "Product page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow p-3 rounded">
                <div class="card-header">
                    <h4 class="card-title mb-5">@Model.ProductSelected.Name</h4>
                    <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @foreach (var image in Model.ProductSelected.Product_Images.ToList())
                            {
                                if (@image.Id == Model.ProductSelected.Product_Images.ToList()[0].Id)
                                {
                                    <div class="carousel-item active" data-bs-interval="10000">
                                        <img src=@image.Url class="d-block w-50" alt="...">
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item" data-bs-interval="10000">
                                        <img src=@image.Url class="d-block w-50" alt="...">
                                    </div>
                                }
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-page="/Shoppings" asp-page-handler="show">
                        <div class="container-fluid d-flex">
                            <span class="material-icons m-2">
                                thumb_down_alt
                            </span>
                            <small class="text-muted mt-2 me-3">@Model.ProductSelected.LikesNumber likes</small>
                            <span class="material-icons m-2 ms-4">
                                thumb_up_alt
                            </span>
                            <small class="text-muted mt-2">@Model.ProductSelected.DislikesNumber dislikes</small>
                            <small class="text-muted ms-4 mt-2">@Model.ProductSelected.ShoppedTimes unidades
                                vendidas</small>
                        </div>
                        <label for="" class="fs-1">$ @Model.ProductSelected.UnitPrice</label>
                        <div class="input-group mt-4 mb-3">
                            <span class="input-group-text" id="basic-addon1">Cantidad</span>
                            <input name="productQuantity" type="text" class="form-control" value="@Model.Quantity"
                                aria-label="Username" aria-describedby="basic-addon1">
                            <input name="idProduct" value="@Model.ProductSelected.Id" hidden>
                            <input name="idUser" value="1" hidden>
                            <input name="tipoCompra" value="Unitaria" hidden>
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-grid">
                                <button class="btn btn-primary btn-block mt-2 mb-2">Comprar</button>
                            </div>
                            <div class="col-md-6 d-grid">
                                <button type="submit" class="btn btn-outline-primary d-block mt-2 mb-2">Agregar al
                                    carrito</button>
                            </div>
                        </div>
                    </form>
                    <h5 class="text mt-3">Características</h5>
                    <table class="table table-striped table-hover mt-3">
                        <tbody>
                            <tr>
                                <th scope="row" class="col-4">Unidades disponibles</th>
                                <td>@Model.ProductSelected.StockQuantity</td>
                            </tr>
                            <tr>
                                <th scope="row" class="col-4">Precio por unidad</th>
                                <td>$@Model.ProductSelected.UnitPrice</td>
                            </tr>
                            <tr>
                                <th scope="row" class="col-4">Fecha de actualización</th>
                                <td>@Model.ProductSelected.UnitPrice</td>
                            </tr>
                            <tr>
                                <th scope="row" class="col-4">País</th>
                                <td>@Model.ProductSelected.Country</td>
                            </tr>
                            <tr>
                                <th scope="row" class="col-4">Ubicación</th>
                                <td>@Model.ProductSelected.Location</td>
                            </tr>
                        </tbody>
                    </table>
                    <h5 class="text mt-5">Descripción</h5>
                    <hr class="my-4">
                    <p style="text-align: justify;">
                        @Model.ProductSelected.Description
                    </p>
                    <h5 class="text mt-5">Infromación del vendedor</h5>
                    <hr class="my-4">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" class="col-6">Nombre de usuario</th>
                                <td>@Model.UserVentor.UserName</td>
                            </tr>
                            <tr>
                                <th scope="row" class="col-6">Reputación</th>
                                <td>@Model.UserVentor.Reputation</td>
                            </tr>
                            <tr>
                                <th scope="row" class="col-6">Teléfono</th>
                                <td>@Model.UserVentor.Phone</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Última actualización @Model.ProductSelected.LastUpdate</small>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow p-3 rounded">
                <div class="container-fuild m-3">
                    <label class="text mb-1" for="staticEmail2">Escribe un comentario</label>
                    <form class="row">
                        <div class="col-10">
                            <textarea type="text" class="form-control" id="inputPassword2"
                                placeholder="Comentario"></textarea>
                        </div>
                        <div class="col-2">
                            <button type="submit" class="btn btn-primary">Publicar</button>
                        </div>
                    </form>
                </div>
                <hr class="my-4">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="card m-3">
                        <div class="card-body">
                            <h5 class="card-title">Esta super waw</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Por: JosuéSA</h6>
                            <p class="card-text">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores porro,
                                placeat
                                ipsum vel quam sunt. Aut, ipsa ad officia aliquam, repellat soluta cumque id quod numquam et
                                fuga
                                similique obcaecati!</p>
                            <a href="#" class="card-link">Like</a>
                            <a href="#" class="card-link">Dislike</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
