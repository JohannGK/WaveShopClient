@page
@model CategoriesModel
@{
    ViewData["Title"] = "Ctegories";
}

<style>
    .card:hover {
        box-shadow: 10px 10px 5px palegoldenrod;
        transition-duration: .3s;
    }

    .card {
        transition-duration: .3s;
        padding: 1em;
        font-size: small;
    }

    img {
        width: 7em;
    }

    a{
        text-decoration: none;
    }


    .cmn-divfloat {
        position: fixed !important;
        bottom: 45px;
        right: 15px;
        z-index: 100;
    }

    .cmn-btncircle {
        width: 250px !important;
        height: 40px !important;
        padding: 6px 0px;
        border-radius: 15px;
        font-size: 18px;
        text-align: calc();
    }
</style>

<div id="div-totop" class="cmn-divfloat">
    <a asp-page="/Category" asp-page-handler="Add" class="btn btn-primary cmn-btncircle">
        Agregar nueva categoría
    </a>
</div>

<div class="container card shadow-lg mt-4">
    @{
        <div class="card-header">
            <h2></h2>
        </div>
        <div class="card-body">
            <table class="table table-hover mt-4">
                <thead>
                    <tr>
                        <th>#Id</th>
                        <th>Nombre del categoría</th>
                        <th>Descripción</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in @Model.Categories)
                    {
                        <tr>
                            <td><a asp-page="/Category" asp-page-handler="Update" asp-route-id="@category.Id"> @category.Id </a></td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>@category.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    }
</div>


@section Scripts {
<script>
    $(document).ready(() => {

    });
</script>
}
